@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
        <button type="submit" class="btn btn-secondary">Logga ut</button>
    </form>
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-secondary me-2">Logga in</a>
    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-secondary">Registrera</a>
}
